<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@android:style/Widget.Holo.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="false"
    android:isScrollContainer="false"
    android:scrollIndicators="top|bottom"
    android:scrollbarAlwaysDrawVerticalTrack="false"
    android:scrollbarStyle="insideInset">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:tag="sw600dp_step_detail"
        android:padding="16dp">


        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/exo_player_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp" />

        <ImageView
            android:id="@+id/thumb_nail_image"
            android:layout_gravity="left"
            android:paddingRight="15dp"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@android:color/black"
            android:id="@+id/fragment_recipe_step_detail_text"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/previous_step_button"
                android:layout_width="90dp"
                android:layout_height="50dp"



                android:text="Prev"
                />

            <Button
                android:id="@+id/next_step_button"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:backgroundTintMode="src_over"

                android:text="Next" />


        </LinearLayout>
        <ScrollView
            style="@android:style/Widget.Holo.ScrollView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:clipToPadding="false"
            android:fillViewport="false"
            android:isScrollContainer="false"
            android:scrollIndicators="top|bottom"
            android:scrollbarAlwaysDrawVerticalTrack="false"
            android:scrollbarStyle="insideInset">

            <TextView
                android:id="@+id/steps_detail_text2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="15dp"
                android:textColor="#0000FF"
                android:textSize="16sp"
                android:text="Recipe Steps"/>
        </ScrollView>
    </LinearLayout>
</ScrollView>



